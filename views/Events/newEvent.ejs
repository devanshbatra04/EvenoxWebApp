<% include ../partials/header.ejs %>
<div class="myback2">
<div class="container">
    <h2 class="r">Add a new event</h2>

    <form action="/events" method="POST" >

   <div class="input-field">
       <input type="text" autocomplete="off" style="color: black" name="eventName">
       <label  style="font-size: 30px">Event Name</label>
   </div>
   <div class="input-field">
       <input type="text" name="location" autocomplete="off" style="color: black">
       <label style="font-size: 30px">Location of event</label>
   </div>

    <label> Starting Time and Date of Event:
        <input type="datetime-local" name="startTime" placeholder="Starting date and time of your event">
    </label>

    <label> Ending time and date of event:
        <input type="datetime-local" name="endTime" placeholder="Ending date and time of your event">
    </label>

    <textarea name="Description" placeholder="Event Description" id="" cols="30" rows="10" style="height: 120px"></textarea>

        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
        </button>
        <div class="input-field col s12">
            <select>
                <option value="" disabled selected>Choose your option</option>
                <option value="1">Option 1</option>
                <option value="2">Option 2</option>
                <option value="3">Option 3</option>
            </select>
            <label>Materialize Select</label>
        </div>
</form>

</div>
</div>
<script type="text/javascript">
    $('input').on('focusin', function() {
        $(this).parent().find('label').addClass('active');
    });

    $('input').on('focusout', function() {
        if (!this.value) {
            $(this).parent().find('label').removeClass('active');
        }
    });
</script>
