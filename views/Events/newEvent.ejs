        outline: none;
        box-shadow: none;
        display: block;
        height: 30px;
        line-height: 30px;
        padding: 8px 15px;
        border-bottom: 1px solid #eee;
        width: 100%;
        font-size: 18px;
    }
    .form-structor .signup .form-holder .input:last-child {
        border-bottom: 0;
