<% include ../partials/header.ejs %>
    <h1><%= event.name%></h1>
    <h2>Listed By: <%= event.author.username %></h2>

    <ul>

        <li>The event <%= event.name%> will be held at <%= event.location %></>
        <li>The event starts on <%= event.startDate %> at <%= event.startTime %></li>
        <li>The event will end on <%= event.endDate %> at <%= event.endTime%> </li>
    </ul>

    <div>
        <%= event.description%>
    </div>
    <% var i = "/events/" + event._id + "/edit"; %>
    <form action="/events/<%= event._id %>?_method=DELETE" method="POST" >
        <button>
            DELETE
        </button>
    </form>

    <h2><a href=<%= i %>>Edit Event</a></h2>
<% include ../partials/footer.ejs %>
