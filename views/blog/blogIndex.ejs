<% include ../partials/header.ejs %>

<div class="banner">
    <h1>All blog posts here</h1>
    <a href="/blog/posts/new">Create new post</a>
</div>

<div class="posts">
    <% posts.forEach(function(post){ %>
    <div class="post client1">
        <h2><%= post.title %></h2>
        <div>
            <p><%= post.content.substring(0, 200) %>...</p>
            <% var a ="/blog/posts/"; %>
            <% var id = post._id %>
            <% var url = a + id %>
            <a href=<%= url %>>Read More</a>
            <!--
            <a href=<%= url %>>Read more</a>-->
        </div>
    </div>
    <% }) %>
</div>

