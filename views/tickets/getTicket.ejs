<body>
<div class="container">
    <div class="row">
        <div class="col-xs-4">
            <div class="eventox-logo" style="
                padding-top:10%;">
                <img src="/public/eventox-logo.jpg" style="display:block; width:auto; max-height: 140px; margin: 0 auto">

            </div>
        </div>
        <div class="col-xs-8 header-content" style="padding-top: 2%; font-family: 'Poppins', sans-serif;">
            <div>
                One Stop Solution to your event problems
            </div>
            <div>
                Eventox.in
            </div>

        </div>



    </div>
    <div class="row">
            <div class="event-name" style="font-family: 'Source Sans Pro', sans-serif;">
                <%= event.name %>

            </div>

            <div id="qrcode">
                <script src="https://cdn.rawgit.com/davidshimjs/qrcodejs/master/qrcode.js"></script>
                <script>
                    var QRId = "https://www.google.co.in"
                    var qrcode = new QRCode("qrcode", {
                        text: QRId,
                        width: 200,
                        height: 200,
                        colorDark : "#000000",
                        colorLight : "#ffffff",
                        correctLevel : QRCode.CorrectLevel.H
                    });

                    // get the qr div, then find the canvas element inside it
                    var canvas = document.getElementById('qrcode').querySelector('canvas');

                    var dataURL = canvas.toDataURL();

                    // document.getElementById('result').innerHTML = dataURL;
                </script>
            </div>

    </div>
    <div id="mainContent" class="row">
        <div style="margin:0 auto">
            <p class="cust-detail" style="text-align: center;font-family: 'Roboto Slab', serif; color: black;font-size: 20px">
                Name: <%= currentUser.name %>
            </p>
            <p class="event-details" style="text-align: center;font-family: 'Roboto Slab', serif; color: black;font-size: 20px">
            <p class="event-location" style="text-align: center;font-family: 'Roboto Slab', serif; color: black;font-size: 20px ">
                Event-Location: <%= event.location %>
            </p>
            <p class="event-time" style="text-align: center;font-family: 'Roboto Slab', serif; color: black;font-size: 20px">
                Start-Time: <%= event.startTime %> on <%= event.startDate%>
            </p>
            </p>
        </div>

    </div>
    <div class="row">
        <button id="cmd">Generate PDF</button>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.4.1/jspdf.debug.js" integrity="sha384-THVO/sM0mFD9h7dfSndI6TS0PgAGavwKvB5hAxRRvc0o9cPLohB0wb/PTA7LdUHs" crossorigin="anonymous"></script>
        <script>
            window.onload = function() {
                w = window.outerWidth;
                h = window.outerHeight;
                console.log(w);
                var doc = new jsPDF({
                    orientation: 'portrait',
                    unit: 'pt',
                    format: [w, h]
                });
                var specialElementHandlers = {
                    '#editor': function (element, renderer) {
                        return true;
                    }
                };

                document.getElementById('cmd').onclick= function () {
                    // doc.fromHTML($('#content').html(), 15, 15, {
                    //     'width': 170,
                    //     'elementHandlers': specialElementHandlers
                    // });
                    // doc.save('sample-file.pdf');
                    a = document.body;
                    // a.style.maxWidth = 'unset';
                    console.log(a);
                    doc.addHTML(a, function () {
                        doc.save('ticket_temp.pdf');
                    });
                };
            }
            // This code is collected but useful, click below to jsfiddle link.
        </script>
    </div>

</div>
</body>
</html>